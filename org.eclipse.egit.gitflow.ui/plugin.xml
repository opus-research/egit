					icon="icons/obj16/git-flow_16x10.png"
					label="%TeamGitFlowInit.name"
					style="push">
				<visibleWhen
						checkEnabled="false">
					<iterate
							ifEmpty="false"
							operator="and">
						<adapt type="org.eclipse.jgit.lib.Repository">
							<not>
								<test
										forcePluginActivation="true"
										property="GitFlowRepository.isInitialized">
